@model ICollection<GenreVM>

@foreach(var genre in Model){
    <tr>
        <td>@genre.Name</td>
        <td>@genre.Description</td>
        <td class="text-end">
            <div class="w-50 btn-group" role="group">
                <a asp-area="Admin" asp-controller="Genre" asp-action="EditGenre" asp-route-id="@genre.Id" class="btn btn-success mx-2"><i class="bi bi-pencil-square"></i></a>
                <a onclick="DeleteWarning('/Admin/Genre/DeleteGenre/'+@genre.Id, ' #tblGenres')" class="btn btn-danger mx-2"><i class="bi bi-trash3"></i></a>
            </div>
        </td>
    </tr>
}