@model ICollection<TagVM>

<div class="container p-2">
    <div class="row mt-3">
        <div class="col-6">
            <h2 class="text-primary">All Tags</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Admin" asp-controller="Tag" asp-action="CreateTag" class="btn btn-primary"><i class="bi bi-plus-square"></i> &nbsp; Create New Tag</a>
        </div>
    </div>
    <br />

    <table id="tblTags" class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var tag in Model)
            {
                <tr>
                    <td>@tag.Name</td>
                    <td colspan="2" class="text-end">
                        <div class="w-25 btn-group" role="group">
                            <a asp-area="Admin" asp-controller="Tag" asp-action="EditTag" asp-route-id="@tag.Id" class="btn btn-success mx-2"><i class="bi bi-pencil-square"></i></a>
                            <a onclick="DeleteWarning('/Admin/Tag/DeleteTag/'+@tag.Id, ' #tblTags')" class="btn btn-danger mx-2"><i class="bi bi-trash3"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script src="~/js/deleteWarning.js"></script>
}