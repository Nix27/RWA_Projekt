@model ICollection<Video>

<div class="container p-2">
    <div class="row mt-3">
        <div class="col-6">
            <h2 class="text-primary">All Videos</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Admin" asp-controller="Video" asp-action="CreateVideo" class="btn btn-primary"><i class="bi bi-plus-square"></i> &nbsp; Create New Video</a>
        </div>
    </div>
    <br />

    <table id="tblVideos" class="table table-bordered table-striped" style="width: 100%"> 
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Description</th>
                <th>Duration</th>
                <th>Streaming URL</th>
                <th>Genre</th>
                <th>Tags</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var video in Model)
            {
                <tr>
                    <td>
                        <img src="@video.Image?.Content" alt="Video image" style="width: 70px; height: 70px" />
                    </td>
                    <td>@video.Name</td>
                    <td>@video.Description</td>
                    <td>@video.TotalSeconds</td>
                    <td>@video.StreamingURL</td>
                    <td>@video.Genre.Name</td>
                    <td>
                        @foreach(var videoTag in video.VideoTags)
                        {
                            <text>@videoTag.Tag.Name </text>
                        }
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-area="Admin" asp-controller="Video" asp-action="EditVideo" asp-route-id="@video.Id" class="btn btn-success mx-2"><i class="bi bi-pencil-square"></i></a>
                            <a onclick="DeleteVideoWarning('/Admin/Video/DeleteVideo/'+@video.Id)" class="btn btn-danger mx-2"><i class="bi bi-trash3"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script src="~/js/video.js"></script>
}
