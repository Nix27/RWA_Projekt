@model ICollection<UserDto>

<div class="container p-2">
    <div class="row mt-3">
        <div class="col-6">
            <h2 class="text-primary">All Users</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Admin" asp-controller="User" asp-action="CreateUser" class="btn btn-primary"><i class="bi bi-plus-square"></i> &nbsp; Register New User</a>
        </div>
    </div>
    <br />

    <table id="tblUsers" class="table">
        <thead>
            <tr>
                <th>Username</th>
                <th>First name</th>
                <th>Last name</th>
                <th>E-mail</th>
                <th>Phone</th>
                <th>Country</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.Phone</td>
                    <td>@user.Country</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-area="Admin" asp-controller="User" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-success mx-2"><i class="bi bi-pencil-square"></i></a>
                            <a onclick="DeleteWarning('/Admin/User/DeleteUser/'+@user.Id, ' #tblUsers')" class="btn btn-danger mx-2"><i class="bi bi-trash3"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script src="~/js/deleteWarning.js"></script>
}