@model IEnumerable<UserVM>

@foreach (var user in Model)
{
    <tr>
        <td>@user.User.UserName</td>
        <td>@user.User.FirstName</td>
        <td>@user.User.LastName</td>
        <td>@user.User.Email</td>
        <td>@user.User.Phone</td>
        <td>@user.User.Country</td>
        <td>
            <div class="w-75 btn-group" role="group">
                <a asp-area="Admin" asp-controller="User" asp-action="EditUser" asp-route-id="@user.User.Id" class="btn btn-success mx-2"><i class="bi bi-pencil-square"></i></a>
                <a onclick="DeleteWarning('/Admin/User/DeleteUser/'+@user.User.Id, ' #tblUsers')" class="btn btn-danger mx-2"><i class="bi bi-trash3"></i></a>
            </div>
        </td>
    </tr>
}