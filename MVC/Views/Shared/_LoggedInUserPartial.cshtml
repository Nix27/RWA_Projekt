@using System.Security.Claims;

@if(User.Identity != null && User.Identity.IsAuthenticated){
    var claimsIdentity = User.Identity as ClaimsIdentity;
    var userId = claimsIdentity.FindFirst(ClaimTypes.NameIdentifier).Value;

    <ul class="navbar-nav">
        <li class="nav-item">
            <a id="username" class="nav-link" asp-area="Public" asp-controller="PublicUser" asp-action="UserProfile" asp-route-id="@userId">@User.Identity.Name</a>
        </li>
        <li class="nav-item pt-2">
            <form asp-area="Public" asp-controller="PublicUser" asp-action="Logout"><button type="submit" class="btn-logout">LOGOUT</button></form>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a id="username" class="nav-link" asp-area="Public" asp-controller="PublicUser" asp-action="LogIn">LogIn</a>
        </li>
    </ul>
}